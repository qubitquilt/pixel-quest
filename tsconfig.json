{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "jsx": "preserve",
    "useDefineForClassFields": false,
    "paths": {
      "@/shadcn/ui/*": ["./packages/client/components/ui/*"],
      "@/pixel/components/*": ["./packages/client/app/components/*"],
      "@/lib/*": ["./packages/client/lib/*"],
      "@/shared/*": ["./packages/shared/*"],
      "*": ["./*"]
    },
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["packages/**/*"],
  "exclude": ["node_modules"]
}
