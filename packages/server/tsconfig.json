{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "outDir": "dist",
    "module": "commonjs",
    "target": "ES2020",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "paths": {
      "shared": ["../shared/dist/index"],
      "shared/*": ["../shared/dist/*"]
    }
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist"],
  "comments": "Added paths for 'shared' package resolution to built dist/index.d.ts to fix monorepo TypeScript module imports."
}
